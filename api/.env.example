# --- API (Fastify) ---
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Postgres in docker-compose (service name: postgres)
# Format: postgres://USER:PASSWORD@HOST:PORT/DB
DATABASE_URL=postgres://h2own:h2own@postgres:5432/h2own

# Auth/session
SESSION_SECRET=replace-with-32+char-random-hex
COOKIE_SECURE=false            # set true in production behind HTTPS
TOKEN_PEPPER=replace-with-random-hex  # used when hashing API tokens

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate limiting (optional)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
