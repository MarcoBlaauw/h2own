{
  "name": "h2own-web",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "svelte-kit sync && eslint . && svelte-check --tsconfig ./tsconfig.json",
    "pretest": "svelte-kit sync",
    "test": "vitest run",
    "pretest:e2e": "svelte-kit sync && pnpm run build",
    "test:e2e": "playwright test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:storybook": "bash ./scripts/test-storybook.sh",
    "format": "prettier --plugin=prettier-plugin-svelte --write src/hooks.server.ts src/lib/stores/session.ts src/lib/stores/session.test.ts src/routes/+page.svelte",
    "format:check": "prettier --plugin=prettier-plugin-svelte --check src/hooks.server.ts src/lib/stores/session.ts src/lib/stores/session.test.ts src/routes/+page.svelte"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.17.0",
    "@opentelemetry/api": "^1.9.0",
    "@playwright/test": "^1.49.0",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/adapter-node": "^5.2.5",
    "@sveltejs/kit": "^2",
    "@sveltejs/vite-plugin-svelte": "^6",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/svelte": "^5.1.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/node": "^20.19.11",
    "@storybook/addon-a11y": "^8.3.0",
    "@storybook/addon-essentials": "^8.3.0",
    "@storybook/addon-interactions": "^8.3.0",
    "@storybook/svelte": "^8.3.0",
    "@storybook/sveltekit": "^8.3.0",
    "@storybook/test": "^8.3.0",
    "@storybook/test-runner": "^0.19.0",
    "http-server": "^14.1.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^15.12.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.41",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "storybook": "^8.3.0",
    "svelte": "^5.38.5",
    "svelte-check": "^4.0.4",
    "tailwindcss": "^4.1.13",
    "typescript": "^5",
    "typescript-eslint": "^8.19.0",
    "wait-on": "^7.2.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "zod": "^3.23.8"
  },
  "packageManager": "pnpm@10.18.2"
}
