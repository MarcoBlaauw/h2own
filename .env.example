# --- Runtime ---
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# --- API + Web base URLs ---
APP_BASE_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000
# For local dev with Vite/SvelteKit proxy, keep browser requests same-origin.
VITE_API_URL=/api
PUBLIC_API_BASE=/api
# Upstream API used by web server/proxy layer in local dev.
INTERNAL_API_URL=http://localhost:3001

# --- Database / Cache ---
DATABASE_URL=postgres://h2own:changeme@localhost:5432/h2own
REDIS_URL=redis://localhost:6379

# --- Sessions / Auth ---
SESSION_SECRET=replace-with-32+char-random-hex
SESSION_TTL_SECONDS=604800
SESSION_PREFIX=session
COOKIE_SECURE=false
TRUST_PROXY=false
PASSWORD_RESET_TOKEN_TTL_SECONDS=3600

# --- Optional hardening / app features ---
TOKEN_PEPPER=
RATE_LIMIT_MAX=
RATE_LIMIT_WINDOW_MS=

# --- External APIs ---
TOMORROW_API_KEY=replace-with-tomorrow-api-key
TOMORROW_API_BASE=https://api.tomorrow.io/v4
WEATHER_CACHE_TTL_MINUTES=30
WEATHER_RATE_LIMIT_COOLDOWN_SECONDS=300
PUBLIC_GOOGLE_MAPS_API_KEY=
PUBLIC_GOOGLE_MAPS_MAP_ID=

# --- Photo storage (optional) ---
PHOTO_PUBLIC_BASE_URL=
PHOTO_UPLOAD_BASE_URL=

# --- Email ---
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=H2Own

# --- Captcha (optional) ---
# CAPTCHA_PROVIDER must be omitted unless set to one of: turnstile, hcaptcha
CAPTCHA_SITE_KEY=
CAPTCHA_SECRET=
VITE_CAPTCHA_PROVIDER=
VITE_CAPTCHA_SITE_KEY=

# --- Proxy headers (SvelteKit adapter-node) ---
PROTOCOL_HEADER=x-forwarded-proto
HOST_HEADER=x-forwarded-host
ADDRESS_HEADER=cf-connecting-ip
XFF_DEPTH=1

# --- Compose defaults (optional convenience) ---
POSTGRES_DB=h2own
POSTGRES_USER=h2own
POSTGRES_PASSWORD=changeme
API_PORT=3001
WEB_PORT=3000
REDIS_PORT=6379
